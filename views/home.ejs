    <link rel="stylesheet" href="css/home.css">
</head>

<body>

    <!-- <div class="d-flex p-absolute flex-row"> -->

    <!-- </div> -->

    <div class="d-flex flex-column flex-nowrap">

        <div class="d-flex flex-row flex-wrap justify-content-between p-sticky top" id="navbar">
            <div id="profile" class="d-flex flex-row align-items-center gap-1">
                <img src="images/profile.png" alt="pict" id="profilePict">
                <div class="d-flex flex-column">
                    <p id="profileName"></p>
                    <p id="onlineMember"></p>
                </div>
            </div>
            <img src="images/logo.png" alt="pict" id="watermark">
            <a id="logoutBtn" class="align-self-center" href="/logout">Logout</a>
        </div>

        <div id="messagePanel" class="d-flex flex-column gap-2">

        </div>

        <div id="messageForm" class="d-flex flex-row p-fixed bot full-width">
            <input type="text" id="usernameBox" value="<%=username%>" class="invicible" readonly disabled>
            <input type="text" id="messageBody" class="full-width" placeholder="Masukkan Pesan" />
            <button id="sendBtn" type="reset">Send</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="script/home.js"></script>

</body>

</html>